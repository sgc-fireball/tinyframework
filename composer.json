{
  "name": "sgc-fireball/tinyframework",
  "license": "proprietary",
  "type": "composer-plugin",
  "autoload": {
    "files": [
      "src/Helpers/env.php",
      "src/Helpers/toBool.php",
      "src/Helpers/dic.php",
      "src/Helpers/guid.php",
      "src/Helpers/dump.php",
      "src/Helpers/base64url.php",
      "src/Helpers/exception2text.php",
      "src/Helpers/route.php",
      "src/Helpers/lang.php",
      "src/Helpers/view.php"
    ],
    "psr-4": {
      "TinyFramework\\": "src/"
    }
  },
  "require": {
    "php": ">=7.4",
    "ext-json": "*",
    "ext-mysqli": "*",
    "ext-simplexml": "*",
    "ext-readline": "*",
    "composer-plugin-api": "^1.1",
    "composer/composer": "@stable",
    "psy/psysh": "@stable"
  },
  "require-dev": {
    "phpstan/phpstan": "^0.12"
  },
  "suggest": {
    "ext-redis": "*",
    "predis/predis": "@stable"
  },
  "scripts": {
    "post-install-cmd": [
      "TinyFramework\\Composer\\Hook::postInstallCommand"
    ],
    "post-update-cmd": [
      "TinyFramework\\Composer\\Hook::postUpdateCommand"
    ],
    "analyse": [
      "@php $(which composer) dump-autoload",
      "@php vendor/bin/phpstan analyse"
    ]
  },
  "scripts-descriptions": {
    "analyse": "Dump autoload and analyse the source with phpstan!"
  },
  "extra": {
    "class": "TinyFramework\\Composer\\Plugin"
  }
}